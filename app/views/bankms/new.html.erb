<h1>新規登録フォーム</h1>

<%= form_for(@bankm) do |f| %>
  <% if @bankm.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bankm.errors.count, "error") %> prohibited this bankm from being saved:</h2>

      <ul>
      <% @bankm.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :登録マシン %><br>
    <%= f.text_field :entmcn %>
  </div>
  <div class="field">
    <%= f.label :登録ユーザー %><br>
    <%= f.text_field :entclt %>
  </div>
  <div class="field">
    <%= f.label :更新マシン %><br>
    <%= f.text_field :edtmcn %>
  <div class="field">
    <%= f.label :更新ユーザー %><br>
    <%= f.text_field :edtclt %>
  </div>
  <div class="field">
    <%= f.label :銀行コード（編集による変更不可） %><br>
    <%= f.text_field number_with_precision(:bank_cd, precision: 0), {style: "ime-mode:disabled"} %>
  </div>
  <div class="field">
    <%= f.label :銀行名 %><br>
    <%= f.text_field :bank_j %>
  </div>
  <div class="field">
    <%= f.label :銀行名（略称） %><br>
    <%= f.text_field :bank_a %>
  </div>
  <div class="field">
    <%= f.label :銀行名（カナ） %><br>
    <%= f.text_field :bank_k %>
  </div>

  <div class="actions">
    <%= f.hidden_field :bank_params, :value => { :bank_cd_search => params[:bank_cd_search],
                       :bank_j_search => params[:bank_j_search] } %>
    <%= f.submit %>
  </div>
<% end %>
<%= link_to '検索結果に戻る', bankms_path(bank_params) %>
<%= link_to '検索フォームに戻る', root_path %>
